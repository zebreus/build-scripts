[host_machine] 
system = 'wasi'
cpu_family = 'wasm32'
cpu = 'wasm32'
endian = 'little'

[binaries]
c = 'wasix-clang'
cpp = 'wasix-clang++'
ar = 'llvm-ar'
ld = 'wasm-ld'
# cython = '/usr/bin/cython'

[properties]
needs_exe_wrapper = true
skip_sanity_check = true
longdouble_format = 'IEEE_QUAD_LE' # for numpy